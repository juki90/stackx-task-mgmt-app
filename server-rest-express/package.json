{
    "name": "server-rest-node",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "main": "src/bin/server.ts",
    "scripts": {
        "dev": "nodemon",
        "start": "node dist/bin/server.js",
        "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
        "clean": "tsc --build --clean",
        "db:migrate:dev": "npx ts-node --files src/migrations/index.ts up",
        "db:migrate:undo:all:dev": "npx ts-node --files src/migrations/index.ts down --to 0",
        "db:seed:dev": "npx ts-node --files src/seeders/index.ts up",
        "db:destroy:dev": "npm run db:migrate:undo:all:dev && npx ts-node --files src/seeders/index.ts down --to 0",
        "db:recreate:dev": "npm run db:destroy:dev && npm run db:migrate:dev && npm run db:seed:dev",
        "db:migrate:prod": "node dist/migrations/index.js up",
        "db:migrate:undo:all:prod": "node dist/migrations/index.js down --to 0",
        "db:seed:prod": "node dist/seeders/index.js up",
        "db:destroy:prod": "npm run db:migrate:undo:all:prod && node dist/seeders/index.js down --to 0",
        "db:recreate:prod": "npm run db:destroy:prod && npm run db:migrate:prod && npm run db:seed:prod",
        "test": "cross-env NODE_ENV=test jest --verbose --detectOpenHandles --runInBand --forceExit"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@faker-js/faker": "~8.1.0",
        "@types/bcryptjs": "~2.4.4",
        "@types/cors": "~2.8.13",
        "@types/express": "~4.17.17",
        "@types/faker": "~6.6.9",
        "@types/jest": "~29.5.2",
        "@types/jsonwebtoken": "~9.0.3",
        "@types/node": "~20.3.3",
        "@types/sequelize": "~4.28.15",
        "@types/supertest": "~2.0.14",
        "@types/umzug": "~2.3.4",
        "@types/uuid": "~9.0.4",
        "@typescript-eslint/eslint-plugin": "~5.60.1",
        "@typescript-eslint/parser": "~5.60.1",
        "cross-env": "~7.0.3",
        "eslint": "~8.44.0",
        "eslint-config-prettier": "~8.8.0",
        "jest": "~29.5.0",
        "nodemon": "~2.0.22",
        "prettier": "~2.8.8",
        "sequelize-cli": "~6.6.1",
        "supertest": "~6.3.3",
        "ts-jest": "~29.1.1",
        "ts-node": "~10.9.1",
        "ts-node-dev": "~2.0.0",
        "tsconfig-paths": "~4.2.0",
        "tscpaths": "~0.0.9",
        "typescript": "~5.1.6"
    },
    "dependencies": {
        "bcryptjs": "~2.4.3",
        "cors": "~2.8.5",
        "dayjs": "~1.11.9",
        "deepmerge": "~4.3.1",
        "dotenv": "~16.3.1",
        "express": "~4.18.2",
        "express-async-errors": "~3.1.1",
        "express-validator": "~7.0.1",
        "http-status-codes": "~2.3.0",
        "inversify": "~6.0.1",
        "inversify-express-utils": "~6.4.3",
        "jsonwebtoken": "~9.0.2",
        "pg": "~8.11.1",
        "reflect-metadata": "~0.1.13",
        "sequelize": "~6.32.1",
        "sequelize-typescript": "~2.1.5",
        "umzug": "~3.3.1",
        "uuid": "~9.0.1"
    }
}
